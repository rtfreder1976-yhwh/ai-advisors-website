---
const contactInfo = {
  email: 'info@singingriverai.com',
  phone: '(256) 740-3195',
  address: '2784 Underwood Mountain Road, Tuscumbia, AL 35674',
};
---

<section class="py-24 lg:py-32 bg-cream relative overflow-hidden" id="contact">
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-charcoal/5 rounded-full blur-2xl"></div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
      <!-- Left Column: Info -->
      <div>
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-px bg-accent"></div>
          <span class="text-sm font-medium text-stone uppercase tracking-widest">Get in Touch</span>
        </div>

        <h2 class="heading-display text-4xl md:text-5xl lg:text-6xl mb-6">
          Let's talk about <em>your vision</em>
        </h2>

        <p class="text-lg text-stone mb-10 max-w-lg">
          Ready to transform your business with AI? Book a free 30-minute consultation to discuss your needs and explore possibilities.
        </p>

        <!-- Contact details -->
        <div class="space-y-6">
          <a href={`mailto:${contactInfo.email}`} class="flex items-center gap-4 group">
            <div class="w-14 h-14 bg-white rounded-xl flex items-center justify-center shadow-sm group-hover:bg-charcoal transition-colors duration-300">
              <svg class="w-6 h-6 text-charcoal group-hover:text-cream transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-stone">Email</p>
              <p class="font-medium text-charcoal group-hover:text-accent transition-colors duration-300">{contactInfo.email}</p>
            </div>
          </a>

          <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="flex items-center gap-4 group">
            <div class="w-14 h-14 bg-white rounded-xl flex items-center justify-center shadow-sm group-hover:bg-charcoal transition-colors duration-300">
              <svg class="w-6 h-6 text-charcoal group-hover:text-cream transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-stone">Phone</p>
              <p class="font-medium text-charcoal group-hover:text-accent transition-colors duration-300">{contactInfo.phone}</p>
            </div>
          </a>

          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-white rounded-xl flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6 text-charcoal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-stone">Address</p>
              <p class="font-medium text-charcoal">{contactInfo.address}</p>
            </div>
          </div>
        </div>

      </div>

      <!-- Right Column: Form -->
      <div class="lg:pl-8">
        <div class="bg-white rounded-2xl p-8 lg:p-10 shadow-xl shadow-charcoal/5">
          <h3 class="font-display text-2xl mb-6 text-charcoal">Book Your Free Consultation</h3>

          <form class="space-y-6" id="contact-form">
            <div>
              <label for="name" class="block text-sm font-medium text-charcoal mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-cream border border-stone-light/30 rounded-xl text-charcoal placeholder-stone transition-colors duration-300"
                placeholder="Your name"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-charcoal mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-cream border border-stone-light/30 rounded-xl text-charcoal placeholder-stone transition-colors duration-300"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-medium text-charcoal mb-2">Company (Optional)</label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 bg-cream border border-stone-light/30 rounded-xl text-charcoal placeholder-stone transition-colors duration-300"
                placeholder="Your company"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-charcoal mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 bg-cream border border-stone-light/30 rounded-xl text-charcoal placeholder-stone transition-colors duration-300 resize-none"
                placeholder="Tell us about your AI goals..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full btn-primary py-4 text-center"
            >
              <span>Send Message</span>
            </button>
          </form>

          <p class="text-sm text-stone text-center mt-6">
            Or email directly at <a href={`mailto:${contactInfo.email}`} class="text-accent hover:underline">{contactInfo.email}</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    // In a real implementation, you'd send this to your backend
    alert('Thank you for your message! We will get back to you shortly.');
    form.reset();
  });
</script>
