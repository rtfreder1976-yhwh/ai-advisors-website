---
const navLinks = [
  { href: '/ai-readiness-report/', label: 'Free AI Report' },
  { href: '/blog/', label: 'Blog' },
  { href: '/#about', label: 'About' },
  { href: '/#contact', label: 'Contact' },
];

const serviceLinks = [
  { href: '/services/ai-training', label: 'AI Education & Training' },
  { href: '/services/ai-consulting', label: 'AI Strategy & Consulting' },
  { href: '/services/ai-implementation', label: 'AI Implementation' },
  { href: '/services/ai-website-optimization', label: 'AI Website Optimization' },
  { href: '/services/ongoing-support', label: 'Ongoing Support' },
];

const locationLinks = [
  { href: '/huntsville-ai-consulting', label: 'Huntsville' },
  { href: '/madison-ai-consulting', label: 'Madison' },
  { href: '/decatur-ai-consulting', label: 'Decatur' },
  { href: '/athens-ai-consulting', label: 'Athens' },
  { href: '/shoals-ai-consulting', label: 'Shoals (Florence)' },
];

const industryLinks = [
  { href: '/industries/real-estate', label: 'Real Estate Agents' },
  { href: '/industries/professional-services', label: 'Law, Accounting & Consulting' },
  { href: '/industries/home-services', label: 'Contractors & Home Services' },
  { href: '/industries/healthcare', label: 'Healthcare & Medical' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="header">
  <nav class="max-w-7xl mx-auto px-6 lg:px-8 py-5 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-10 h-10 bg-charcoal rounded-sm flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
        <span class="text-cream font-display text-xl">SR</span>
      </div>
      <span class="font-display text-xl tracking-tight hidden sm:block">Singing River AI</span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-8">
      <!-- Services Dropdown -->
      <div class="relative group/dropdown">
        <button class="text-sm font-medium text-stone hover:text-charcoal transition-colors duration-200 flex items-center gap-1">
          Services
          <svg class="w-4 h-4 transition-transform duration-200 group-hover/dropdown:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover/dropdown:opacity-100 group-hover/dropdown:visible transition-all duration-200">
          <div class="bg-white rounded-xl shadow-xl border border-stone-light/20 py-2 min-w-[240px]">
            {serviceLinks.map((link) => (
              <a
                href={link.href}
                class="block px-4 py-2 text-sm text-stone hover:text-charcoal hover:bg-cream transition-colors duration-200"
              >
                {link.label}
              </a>
            ))}
            <div class="border-t border-stone-light/20 mt-2 pt-2">
              <a
                href="/#services"
                class="block px-4 py-2 text-sm text-accent hover:text-accent-dark transition-colors duration-200"
              >
                View All Services
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Industries Dropdown -->
      <div class="relative group/industries">
        <button class="text-sm font-medium text-stone hover:text-charcoal transition-colors duration-200 flex items-center gap-1">
          Industries
          <svg class="w-4 h-4 transition-transform duration-200 group-hover/industries:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover/industries:opacity-100 group-hover/industries:visible transition-all duration-200">
          <div class="bg-white rounded-xl shadow-xl border border-stone-light/20 py-2 min-w-[240px]">
            {industryLinks.map((link) => (
              <a
                href={link.href}
                class="block px-4 py-2 text-sm text-stone hover:text-charcoal hover:bg-cream transition-colors duration-200"
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Locations Dropdown -->
      <div class="relative group/locations">
        <button class="text-sm font-medium text-stone hover:text-charcoal transition-colors duration-200 flex items-center gap-1">
          Locations
          <svg class="w-4 h-4 transition-transform duration-200 group-hover/locations:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover/locations:opacity-100 group-hover/locations:visible transition-all duration-200">
          <div class="bg-white rounded-xl shadow-xl border border-stone-light/20 py-2 min-w-[240px]">
            {locationLinks.map((link) => (
              <a
                href={link.href}
                class="block px-4 py-2 text-sm text-stone hover:text-charcoal hover:bg-cream transition-colors duration-200"
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </div>

      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-sm font-medium text-stone hover:text-charcoal transition-colors duration-200 relative group"
        >
          {link.label}
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full"></span>
        </a>
      ))}
      <a
        href="/#contact"
        class="btn-primary text-sm px-6 py-3"
      >
        <span>Book Consultation</span>
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      class="md:hidden w-10 h-10 flex flex-col items-center justify-center gap-1.5"
      id="mobile-menu-btn"
      aria-label="Toggle menu"
    >
      <span class="w-6 h-0.5 bg-charcoal transition-all duration-300" id="line1"></span>
      <span class="w-6 h-0.5 bg-charcoal transition-all duration-300" id="line2"></span>
      <span class="w-4 h-0.5 bg-charcoal transition-all duration-300 ml-auto" id="line3"></span>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    class="md:hidden fixed inset-0 bg-cream/98 backdrop-blur-sm z-40 opacity-0 pointer-events-none transition-opacity duration-300"
    id="mobile-menu"
  >
    <div class="flex flex-col items-center justify-center h-full gap-5 px-6 overflow-y-auto py-20">
      <div class="text-center mobile-link" style="animation-delay: 0s">
        <p class="text-sm text-stone uppercase tracking-widest mb-2">Services</p>
        <div class="flex flex-col gap-1">
          {serviceLinks.map((link) => (
            <a
              href={link.href}
              class="text-lg font-display text-charcoal hover:text-accent transition-colors duration-200"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
      <div class="text-center mobile-link" style="animation-delay: 0.1s">
        <p class="text-sm text-stone uppercase tracking-widest mb-2">Industries</p>
        <div class="flex flex-col gap-1">
          {industryLinks.map((link) => (
            <a
              href={link.href}
              class="text-lg font-display text-charcoal hover:text-accent transition-colors duration-200"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
      <div class="text-center mobile-link" style="animation-delay: 0.2s">
        <p class="text-sm text-stone uppercase tracking-widest mb-2">Locations</p>
        <div class="flex flex-col gap-1">
          {locationLinks.map((link) => (
            <a
              href={link.href}
              class="text-lg font-display text-charcoal hover:text-accent transition-colors duration-200"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
      {navLinks.map((link, index) => (
        <a
          href={link.href}
          class="text-2xl font-display text-charcoal hover:text-accent transition-colors duration-200 mobile-link"
          style={`animation-delay: ${(index + 3) * 0.1}s`}
        >
          {link.label}
        </a>
      ))}
      <a
        href="/#contact"
        class="btn-primary text-lg px-8 py-4 mt-2 mobile-link"
        style="animation-delay: 0.6s"
      >
        <span>Book Consultation</span>
      </a>
    </div>
  </div>
</header>

<style>
  header.scrolled {
    background-color: rgba(250, 248, 245, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 1px 0 rgba(26, 26, 26, 0.05);
  }

  #mobile-menu.active {
    opacity: 1;
    pointer-events: auto;
  }

  #mobile-menu.active .mobile-link {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
  }

  #mobile-menu-btn.active #line1 {
    transform: rotate(45deg) translate(4px, 4px);
  }

  #mobile-menu-btn.active #line2 {
    opacity: 0;
  }

  #mobile-menu-btn.active #line3 {
    transform: rotate(-45deg) translate(3px, -3px);
    width: 1.5rem;
  }
</style>

<script>
  // Header scroll effect
  const header = document.getElementById('header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;

    if (currentScroll > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenuBtn.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
    document.body.style.overflow = mobileMenu?.classList.contains('active') ? 'hidden' : '';
  });

  // Close mobile menu on link click
  const mobileLinks = document.querySelectorAll('.mobile-link');
  mobileLinks.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenuBtn?.classList.remove('active');
      mobileMenu?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });
</script>
