---

<section class="min-h-screen flex items-center relative overflow-hidden pt-20">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 right-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-10 w-64 h-64 bg-stone/5 rounded-full blur-2xl"></div>
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(#1A1A1A 1px, transparent 1px), linear-gradient(90deg, #1A1A1A 1px, transparent 1px); background-size: 60px 60px;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 items-center">
      <!-- Left Column: Content -->
      <div class="max-w-2xl">
        <!-- Eyebrow -->
        <div class="animate-on-load animate-fade-in-up flex items-center gap-3 mb-8">
          <div class="w-12 h-px bg-accent"></div>
          <span class="text-sm font-medium text-stone uppercase tracking-widest">AI Consulting</span>
        </div>

        <!-- Heading -->
        <h1 class="animate-on-load animate-fade-in-up delay-100 heading-display text-5xl md:text-6xl lg:text-7xl mb-8">
          Boost your business <em>efficiency</em> with AI
        </h1>

        <!-- Subheading -->
        <p class="animate-on-load animate-fade-in-up delay-200 text-lg md:text-xl text-stone leading-relaxed mb-10 max-w-xl">
          Implement intelligent solutions that save time and money. Tailored AI strategies for businesses, from education to full implementation.
        </p>

        <!-- CTAs -->
        <div class="animate-on-load animate-fade-in-up delay-300 flex flex-wrap gap-4">
          <a href="#contact" class="btn-primary">
            <span>Free 30-min Consultation</span>
          </a>
          <a href="/ai-readiness-report/" class="btn-secondary">
            Get Your Free AI Report
          </a>
        </div>

        <!-- Stats -->
        <div class="animate-on-load animate-fade-in-up delay-400 flex gap-12 mt-16 pt-8 border-t border-stone-light/30">
          <div>
            <span class="font-display text-4xl text-charcoal">24+</span>
            <p class="text-sm text-stone mt-1">Years Experience</p>
          </div>
          <div>
            <span class="font-display text-4xl text-charcoal">5+</span>
            <p class="text-sm text-stone mt-1">Years in AI</p>
          </div>
          <div>
            <span class="font-display text-4xl text-charcoal">50+</span>
            <p class="text-sm text-stone mt-1">Projects Delivered</p>
          </div>
        </div>
      </div>

      <!-- Right Column: Visual -->
      <div class="animate-on-load animate-scale-in delay-300 relative hidden lg:block">
        <div class="relative">
          <!-- Main visual card -->
          <div class="bg-white rounded-2xl shadow-2xl shadow-charcoal/10 p-8 relative z-10">
            <!-- AI visualization mockup -->
            <div class="aspect-square bg-gradient-to-br from-cream-dark to-cream rounded-xl p-6 flex flex-col">
              <!-- Decorative header -->
              <div class="flex items-center gap-2 mb-6">
                <div class="w-3 h-3 rounded-full bg-accent"></div>
                <div class="w-3 h-3 rounded-full bg-stone-light"></div>
                <div class="w-3 h-3 rounded-full bg-cream-dark border border-stone-light"></div>
              </div>

              <!-- Abstract AI visualization -->
              <div class="flex-1 flex items-center justify-center">
                <div class="relative w-48 h-48">
                  <!-- Orbital rings -->
                  <div class="absolute inset-0 border-2 border-dashed border-stone-light/50 rounded-full animate-spin" style="animation-duration: 20s;"></div>
                  <div class="absolute inset-4 border-2 border-stone-light/30 rounded-full animate-spin" style="animation-duration: 15s; animation-direction: reverse;"></div>
                  <div class="absolute inset-8 border border-accent/40 rounded-full animate-spin" style="animation-duration: 10s;"></div>

                  <!-- Center node -->
                  <div class="absolute inset-0 flex items-center justify-center">
                    <div class="w-16 h-16 bg-charcoal rounded-xl flex items-center justify-center shadow-lg">
                      <svg class="w-8 h-8 text-cream" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                  </div>

                  <!-- Floating nodes -->
                  <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-accent rounded-full shadow-md"></div>
                  <div class="absolute bottom-4 right-0 translate-x-1/2 w-3 h-3 bg-stone rounded-full shadow-md"></div>
                  <div class="absolute top-1/3 left-0 -translate-x-1/2 w-3 h-3 bg-charcoal-light rounded-full shadow-md"></div>
                </div>
              </div>

              <!-- Bottom metrics -->
              <div class="grid grid-cols-3 gap-4 mt-6">
                <div class="text-center">
                  <div class="text-2xl font-display text-charcoal">89%</div>
                  <div class="text-xs text-stone">Efficiency</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-display text-accent-dark">3x</div>
                  <div class="text-xs text-stone">Faster</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-display text-charcoal">24/7</div>
                  <div class="text-xs text-stone">Automation</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Decorative floating elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-accent/10 rounded-2xl -z-10"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 border-2 border-stone-light/20 rounded-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 scroll-indicator">
    <div class="w-6 h-10 border-2 border-stone-light rounded-full flex justify-center pt-2">
      <div class="w-1 h-3 bg-stone rounded-full"></div>
    </div>
  </div>
</section>
