---
const currentYear = new Date().getFullYear();

const links = {
  navigation: [
    { href: '#services', label: 'Services' },
    { href: '#about', label: 'About' },
    { href: '#contact', label: 'Contact' },
  ],
  social: [
    {
      name: 'YouTube',
      href: '#',
      icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
      </svg>`
    },
    {
      name: 'LinkedIn',
      href: '#',
      icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>`
    },
  ],
};
---

<footer class="bg-charcoal text-cream relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 40px 40px;"></div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
    <!-- Main footer content -->
    <div class="py-16 lg:py-20 grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-cream rounded-lg flex items-center justify-center">
            <span class="text-charcoal font-display text-2xl">Ai</span>
          </div>
          <span class="font-display text-2xl">AI Advisors</span>
        </a>
        <p class="text-stone-light max-w-md mb-8">
          Empowering Polish businesses with practical AI solutions. From education to implementation, we're your partner in digital transformation.
        </p>
        <!-- Social links -->
        <div class="flex gap-4">
          {links.social.map((social) => (
            <a
              href={social.href}
              aria-label={social.name}
              class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center text-stone-light hover:bg-accent hover:text-charcoal transition-all duration-300"
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-medium text-white mb-6">Navigation</h4>
        <ul class="space-y-4">
          {links.navigation.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-stone-light hover:text-accent transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-medium text-white mb-6">Contact</h4>
        <ul class="space-y-4 text-stone-light">
          <li>
            <a href="mailto:romuald@aiadvisors.pl" class="hover:text-accent transition-colors duration-300">
              romuald@aiadvisors.pl
            </a>
          </li>
          <li>
            <a href="tel:+48695263884" class="hover:text-accent transition-colors duration-300">
              +48 695 263 884
            </a>
          </li>
          <li>
            Szamocka 10C/49<br />Warsaw, Poland
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="py-6 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-stone-light">
        &copy; {currentYear} AI Advisors. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm text-stone-light">
        <span>NIP: 1181924948</span>
        <span>REGON: 364452361</span>
      </div>
    </div>
  </div>
</footer>
