---
const currentYear = new Date().getFullYear();

const links = {
  navigation: [
    { href: '#services', label: 'Services' },
    { href: '#about', label: 'About' },
    { href: '#contact', label: 'Contact' },
  ],
  // Social links - add URLs when profiles are created
  // social: [
  //   { name: 'YouTube', href: 'https://youtube.com/@singingriverai', icon: '...' },
  //   { name: 'LinkedIn', href: 'https://linkedin.com/company/singingriverai', icon: '...' },
  // ],
  social: [] as Array<{ name: string; href: string; icon: string }>,
};
---

<footer class="bg-charcoal text-cream relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 40px 40px;"></div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
    <!-- Main footer content -->
    <div class="py-16 lg:py-20 grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-cream rounded-lg flex items-center justify-center">
            <span class="text-charcoal font-display text-2xl">SR</span>
          </div>
          <span class="font-display text-2xl">Singing River AI</span>
        </a>
        <p class="text-stone-light max-w-md mb-8">
          Empowering businesses with practical AI solutions. From education to implementation, we're your partner in digital transformation.
        </p>
        <!-- Social links -->
        <div class="flex gap-4">
          {links.social.map((social) => (
            <a
              href={social.href}
              aria-label={social.name}
              class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center text-stone-light hover:bg-accent hover:text-charcoal transition-all duration-300"
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-medium text-white mb-6">Navigation</h4>
        <ul class="space-y-4">
          {links.navigation.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-stone-light hover:text-accent transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-medium text-white mb-6">Contact</h4>
        <ul class="space-y-4 text-stone-light">
          <li>
            <a href="mailto:info@singingriverai.com" class="hover:text-accent transition-colors duration-300">
              info@singingriverai.com
            </a>
          </li>
          <li>
            <a href="tel:+12567403195" class="hover:text-accent transition-colors duration-300">
              (256) 740-3195
            </a>
          </li>
          <li>
            Tuscumbia, Alabama
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="py-6 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-stone-light">
        &copy; {currentYear} Singing River AI. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a href="/privacy-policy" class="text-sm text-stone-light hover:text-accent transition-colors duration-300">
          Privacy Policy
        </a>
        <a href="/terms-and-conditions" class="text-sm text-stone-light hover:text-accent transition-colors duration-300">
          Terms and Conditions
        </a>
      </div>
    </div>
  </div>
</footer>
