---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface ServiceItem {
  name: string;
  description: string;
  href?: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface RelatedService {
  name: string;
  href: string;
  description: string;
}

interface Props {
  title: string;
  description: string;
  serviceName: string;
  serviceDescription: string;
  serviceCategory: string;
  services: ServiceItem[];
  icon: string;
  faqs?: FAQItem[];
  relatedServices?: RelatedService[];
}

const { title, description, serviceName, serviceDescription, serviceCategory, services, icon, faqs = [], relatedServices = [] } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.png', Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${serviceName} - Singing River AI`} />
    <meta property="og:site_name" content="Singing River AI" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Singing River AI" />
    <meta name="keywords" content={`${serviceName}, AI consulting, ${serviceCategory}, business automation, North Alabama, Huntsville, Florence`} />

    <title>{title}</title>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Service",
          "@id": `${canonicalURL}#service`,
          "name": serviceName,
          "description": serviceDescription,
          "provider": { "@id": "https://singingriverai.com/#organization" },
          "areaServed": { "@type": "AdministrativeArea", "name": "North Alabama" },
          "serviceType": serviceCategory.replace(" Services", ""),
          "offers": {
            "@type": "Offer",
            "availability": "https://schema.org/InStock",
            "priceSpecification": {
              "@type": "PriceSpecification",
              "priceCurrency": "USD",
              "description": "Contact for custom quote. Free 30-minute consultation available."
            }
          },
          "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": `${serviceName} Services`,
            "itemListElement": services.map((service) => ({
              "@type": "Offer",
              "itemOffered": { "@type": "Service", "name": service.name }
            }))
          }
        },
        {
          "@type": "WebPage",
          "@id": `${canonicalURL}#webpage`,
          "url": canonicalURL.toString(),
          "name": title,
          "description": description,
          "isPartOf": { "@id": "https://singingriverai.com/#website" },
          "about": { "@id": `${canonicalURL}#service` }
        },
        {
          "@type": "BreadcrumbList",
          "@id": `${canonicalURL}#breadcrumb`,
          "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://singingriverai.com" },
            { "@type": "ListItem", "position": 2, "name": "Services", "item": "https://singingriverai.com/#services" },
            { "@type": "ListItem", "position": 3, "name": serviceName, "item": canonicalURL.toString() }
          ]
        },
        ...(faqs.length > 0 ? [{
          "@type": "FAQPage",
          "@id": `${canonicalURL}#faq`,
          "mainEntity": faqs.map(faq => ({
            "@type": "Question",
            "name": faq.question,
            "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
          }))
        }] : [])
      ]
    })} />
  </head>
  <body class="grain-overlay">
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-20 right-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
          <div class="absolute bottom-20 left-10 w-64 h-64 bg-stone/5 rounded-full blur-2xl"></div>
        </div>

        <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
          <!-- Breadcrumb -->
          <nav class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-stone">
              <li><a href="/" class="hover:text-accent transition-colors">Home</a></li>
              <li><span class="mx-2">/</span></li>
              <li><a href="/#services" class="hover:text-accent transition-colors">Services</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-charcoal font-medium">{serviceName}</li>
            </ol>
          </nav>

          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-px bg-accent"></div>
                <span class="text-sm font-medium text-stone uppercase tracking-widest">{serviceCategory}</span>
              </div>

              <h1 class="heading-display text-4xl md:text-5xl lg:text-6xl mb-6">
                <Fragment set:html={serviceName.replace(/&/g, '<em>&</em>')} />
              </h1>

              <p class="text-lg text-stone leading-relaxed mb-8 max-w-xl">
                {serviceDescription}
              </p>

              <a href="#contact" class="btn-primary inline-flex">
                <span>Get Started</span>
              </a>
            </div>

            <div class="hidden lg:flex justify-center">
              <div class="w-48 h-48 bg-charcoal rounded-2xl flex items-center justify-center text-cream">
                <Fragment set:html={icon} />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Services List -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            What's <em>Included</em>
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map((service, index) => {
              const CardContent = (
                <>
                  <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-6">
                    <span class="font-display text-xl">{String(index + 1).padStart(2, '0')}</span>
                  </div>
                  <h3 class={`font-display text-xl mb-3 text-charcoal ${service.href ? 'group-hover:text-accent transition-colors' : ''}`}>{service.name}</h3>
                  <p class="text-stone leading-relaxed">{service.description}</p>
                  {service.href && (
                    <span class="text-accent font-medium inline-flex items-center gap-2 mt-4">
                      Learn more
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </span>
                  )}
                </>
              );
              return service.href ? (
                <a href={service.href} class="bg-cream rounded-2xl p-8 card-hover block group">
                  {CardContent}
                </a>
              ) : (
                <div class="bg-cream rounded-2xl p-8 card-hover">
                  {CardContent}
                </div>
              );
            })}
          </div>
        </div>
      </section>

      {/* FAQ Section */}
      {faqs.length > 0 && (
        <section class="py-20 bg-cream">
          <div class="max-w-4xl mx-auto px-6 lg:px-8">
            <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
              Frequently Asked <em>Questions</em>
            </h2>
            <div class="space-y-6">
              {faqs.map((faq) => (
                <div class="bg-white rounded-2xl p-6 shadow-sm">
                  <h3 class="font-display text-lg text-charcoal mb-3">{faq.question}</h3>
                  <p class="text-stone leading-relaxed">{faq.answer}</p>
                </div>
              ))}
            </div>
          </div>
        </section>
      )}

      {/* Related Services Section */}
      {relatedServices.length > 0 && (
        <section class="py-20 bg-white">
          <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
              Related <em>Services</em>
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
              {relatedServices.map((service) => (
                <a href={service.href} class="bg-cream rounded-2xl p-8 card-hover block group">
                  <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">{service.name}</h3>
                  <p class="text-stone leading-relaxed mb-4">{service.description}</p>
                  <span class="text-accent font-medium inline-flex items-center gap-2">
                    Learn more
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </a>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- CTA Section -->
      <section class="py-20 bg-charcoal text-cream">
        <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
          <h2 class="heading-display text-3xl md:text-4xl mb-6">
            Ready to get <em class="text-accent">started</em>?
          </h2>
          <p class="text-stone-light text-lg mb-8">
            Book a free consultation to discuss how we can help transform your business with AI.
          </p>
          <a href="/#contact" class="btn-primary inline-flex bg-accent hover:bg-accent-dark">
            <span>Book Free Consultation</span>
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
