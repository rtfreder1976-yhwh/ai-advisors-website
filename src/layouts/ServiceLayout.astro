---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface ServiceItem {
  name: string;
  description: string;
}

interface Props {
  title: string;
  description: string;
  serviceName: string;
  serviceDescription: string;
  serviceCategory: string;
  services: ServiceItem[];
  icon: string;
}

const { title, description, serviceName, serviceDescription, serviceCategory, services, icon } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.svg', Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Singing River AI" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Singing River AI" />

    <title>{title}</title>

    <!-- JSON-LD Service Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "@id": `${canonicalURL}#service`,
      "name": serviceName,
      "description": serviceDescription,
      "provider": {
        "@id": "https://singingriverai.com/#organization"
      },
      "serviceType": serviceCategory,
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": serviceName,
        "itemListElement": services.map((service, index) => ({
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": service.name,
            "description": service.description
          }
        }))
      }
    })} />

    <!-- JSON-LD BreadcrumbList -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://singingriverai.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Services",
          "item": "https://singingriverai.com/#services"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": serviceName,
          "item": canonicalURL.toString()
        }
      ]
    })} />

    <!-- JSON-LD WebPage -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "@id": `${canonicalURL}#webpage`,
      "url": canonicalURL,
      "name": title,
      "description": description,
      "isPartOf": {
        "@id": "https://singingriverai.com/#website"
      },
      "about": {
        "@id": `${canonicalURL}#service`
      },
      "breadcrumb": {
        "@id": `${canonicalURL}#breadcrumb`
      }
    })} />
  </head>
  <body class="grain-overlay">
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-20 right-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
          <div class="absolute bottom-20 left-10 w-64 h-64 bg-stone/5 rounded-full blur-2xl"></div>
        </div>

        <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
          <!-- Breadcrumb -->
          <nav class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-stone">
              <li><a href="/" class="hover:text-accent transition-colors">Home</a></li>
              <li><span class="mx-2">/</span></li>
              <li><a href="/#services" class="hover:text-accent transition-colors">Services</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-charcoal font-medium">{serviceName}</li>
            </ol>
          </nav>

          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-px bg-accent"></div>
                <span class="text-sm font-medium text-stone uppercase tracking-widest">{serviceCategory}</span>
              </div>

              <h1 class="heading-display text-4xl md:text-5xl lg:text-6xl mb-6">
                <Fragment set:html={serviceName.replace(/&/g, '<em>&</em>')} />
              </h1>

              <p class="text-lg text-stone leading-relaxed mb-8 max-w-xl">
                {serviceDescription}
              </p>

              <a href="#contact" class="btn-primary inline-flex">
                <span>Get Started</span>
              </a>
            </div>

            <div class="hidden lg:flex justify-center">
              <div class="w-48 h-48 bg-charcoal rounded-2xl flex items-center justify-center text-cream">
                <Fragment set:html={icon} />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Services List -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            What's <em>Included</em>
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map((service, index) => (
              <div class="bg-cream rounded-2xl p-8 card-hover">
                <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-6">
                  <span class="font-display text-xl">{String(index + 1).padStart(2, '0')}</span>
                </div>
                <h3 class="font-display text-xl mb-3 text-charcoal">{service.name}</h3>
                <p class="text-stone leading-relaxed">{service.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-20 bg-charcoal text-cream">
        <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
          <h2 class="heading-display text-3xl md:text-4xl mb-6">
            Ready to get <em class="text-accent">started</em>?
          </h2>
          <p class="text-stone-light text-lg mb-8">
            Book a free consultation to discuss how we can help transform your business with AI.
          </p>
          <a href="/#contact" class="btn-primary inline-flex bg-accent hover:bg-accent-dark">
            <span>Book Free Consultation</span>
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
