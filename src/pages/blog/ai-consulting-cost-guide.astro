---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = "How Much Does AI Consulting Cost? A Complete Guide | Singing River AI";
const description = "Understand AI consulting costs for small businesses. Learn about pricing models, what affects cost, and how to calculate ROI on AI investments.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const publishDate = "2024-12-28";

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BlogPosting",
      "headline": "How Much Does AI Consulting Cost? A Complete Guide",
      "description": description,
      "datePublished": publishDate,
      "dateModified": publishDate,
      "wordCount": 2200,
      "articleSection": "AI Consulting",
      "author": { "@type": "Person", "name": "Todd Frederickson" },
      "publisher": { "@id": "https://singingriverai.com/#organization" },
      "mainEntityOfPage": { "@id": canonicalURL.href }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://singingriverai.com/" },
        { "@type": "ListItem", "position": 2, "name": "Blog", "item": "https://singingriverai.com/blog/" },
        { "@type": "ListItem", "position": 3, "name": "AI Consulting Cost Guide" }
      ]
    }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
