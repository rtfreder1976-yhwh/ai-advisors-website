---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = "CRM Automation Services | AI-Powered Customer Management | Singing River AI";
const description = "Automate your CRM with AI. Lead follow-up, customer nurturing, pipeline management, and GoHighLevel implementation. Free consultation for small businesses.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.png', Astro.site);

const features = [
  {
    title: "Instant Lead Response",
    description: "Respond to new leads within seconds, 24/7. AI-powered messages that feel personal, not robotic. The first company to respond wins 78% of the time."
  },
  {
    title: "Automated Nurturing Sequences",
    description: "Keep leads warm with intelligent email and SMS sequences. The right message at the right time, automatically adjusted based on engagement."
  },
  {
    title: "Smart Lead Scoring",
    description: "AI analyzes behavior to identify your hottest leads. Focus your time on prospects most likely to convert."
  },
  {
    title: "Pipeline Automation",
    description: "Automatically move deals through stages based on actions taken. No more manual updates or deals falling through the cracks."
  },
  {
    title: "Follow-Up Reminders",
    description: "Never forget a follow-up again. AI tracks engagement and prompts you when human touch is needed."
  },
  {
    title: "Customer Reactivation",
    description: "Automatically reach out to past customers at the right moment. Turn one-time buyers into repeat customers."
  }
];

const integrations = [
  { name: "GoHighLevel", description: "Full implementation and automation" },
  { name: "HubSpot", description: "Workflow automation and integration" },
  { name: "Salesforce", description: "AI enhancement and automation" },
  { name: "Pipedrive", description: "Automation and optimization" },
  { name: "Zoho CRM", description: "Custom automation solutions" },
  { name: "Custom CRMs", description: "API integration and automation" }
];

const faqs = [
  {
    question: "How long does CRM automation take to implement?",
    answer: "Basic automation like lead response can be live within a week. More comprehensive solutions including nurturing sequences, scoring, and pipeline automation typically take 2-4 weeks depending on complexity."
  },
  {
    question: "Will automated messages feel robotic to my customers?",
    answer: "No. We craft messages in your voice and use dynamic personalization. Recipients can't tell the difference from manual messages. We also include human handoff points for complex situations."
  },
  {
    question: "What CRM platforms do you work with?",
    answer: "We're experts in GoHighLevel and work with all major CRMs including HubSpot, Salesforce, Pipedrive, and Zoho. We can also integrate with custom or industry-specific CRMs via API."
  },
  {
    question: "How much does CRM automation cost?",
    answer: "Projects typically range from $2,000-$10,000 depending on complexity. Many clients see ROI within the first month through time savings and increased conversions. We provide detailed quotes after understanding your needs."
  },
  {
    question: "Can I keep my existing CRM?",
    answer: "Usually yes. We can add automation layers to most existing CRMs. Sometimes migrating to a more automation-friendly platform like GoHighLevel makes sense, but we'll give you honest advice about what's best for your situation."
  }
];

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://singingriverai.com/solutions/crm-automation/#service",
      "name": "CRM Automation Services",
      "description": description,
      "provider": { "@id": "https://singingriverai.com/#organization" },
      "serviceType": "CRM Automation",
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      }
    },
    {
      "@type": "WebPage",
      "@id": "https://singingriverai.com/solutions/crm-automation/#webpage",
      "url": "https://singingriverai.com/solutions/crm-automation/",
      "name": "CRM Automation Services | Singing River AI",
      "description": description,
      "isPartOf": { "@id": "https://singingriverai.com/#website" },
      "about": { "@id": "https://singingriverai.com/solutions/crm-automation/#service" }
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://singingriverai.com/solutions/crm-automation/#breadcrumb",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://singingriverai.com/" },
        { "@type": "ListItem", "position": 2, "name": "Solutions", "item": "https://singingriverai.com/ai-for-small-business/" },
        { "@type": "ListItem", "position": 3, "name": "CRM Automation" }
      ]
    },
    {
      "@type": "FAQPage",
      "@id": "https://singingriverai.com/solutions/crm-automation/#faq",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
      }))
    }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="CRM Automation Services - Singing River AI" />
    <meta property="og:site_name" content="Singing River AI" />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <meta name="robots" content="index, follow" />
    <meta name="author" content="Singing River AI" />
    <meta name="keywords" content="CRM automation, AI CRM, automated lead follow-up, GoHighLevel automation, CRM integration, sales automation" />

    <title>{title}</title>

    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body class="grain-overlay">
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-20 right-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
          <div class="absolute bottom-20 left-10 w-64 h-64 bg-stone/5 rounded-full blur-2xl"></div>
        </div>

        <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
          <nav class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-stone">
              <li><a href="/" class="hover:text-accent transition-colors">Home</a></li>
              <li><span class="mx-2">/</span></li>
              <li><a href="/ai-for-small-business/" class="hover:text-accent transition-colors">Solutions</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-charcoal font-medium">CRM Automation</li>
            </ol>
          </nav>

          <div class="max-w-3xl">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-px bg-accent"></div>
              <span class="text-sm font-medium text-stone uppercase tracking-widest">AI Solution</span>
            </div>

            <h1 class="heading-display text-4xl md:text-5xl lg:text-6xl mb-6">
              <em>CRM Automation</em> That Actually Works
            </h1>

            <p class="text-lg text-stone leading-relaxed mb-8">
              Stop losing leads to slow follow-up. Stop spending hours on repetitive CRM tasks. AI-powered automation responds instantly, nurtures intelligently, and keeps your pipeline moving—so you can focus on closing deals.
            </p>

            <a href="/#contact" class="btn-primary inline-flex">
              <span>Get Started</span>
            </a>
          </div>
        </div>
      </section>

      <!-- Stats Section -->
      <section class="py-16 bg-charcoal text-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">78%</div>
              <p class="text-stone-light">First responder wins the deal</p>
            </div>
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">5x</div>
              <p class="text-stone-light">More leads converted with nurturing</p>
            </div>
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">10+</div>
              <p class="text-stone-light">Hours saved weekly on follow-up</p>
            </div>
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">24/7</div>
              <p class="text-stone-light">Response time, every day</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="text-center max-w-2xl mx-auto mb-12">
            <h2 class="heading-display text-3xl md:text-4xl mb-4">
              What CRM Automation <em>Includes</em>
            </h2>
            <p class="text-stone text-lg">
              Comprehensive automation that handles the repetitive work while keeping the human touch where it matters.
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {features.map((feature, index) => (
              <div class="bg-cream rounded-2xl p-8 card-hover">
                <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-6">
                  <span class="font-display text-xl">{String(index + 1).padStart(2, '0')}</span>
                </div>
                <h3 class="font-display text-xl mb-3 text-charcoal">{feature.title}</h3>
                <p class="text-stone leading-relaxed">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Integrations Section -->
      <section class="py-20 bg-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            CRM Platforms We <em>Work With</em>
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {integrations.map((integration) => (
              <div class="bg-white rounded-2xl p-6 flex items-center gap-4">
                <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg text-charcoal">{integration.name}</h3>
                  <p class="text-stone text-sm">{integration.description}</p>
                </div>
              </div>
            ))}
          </div>

          <div class="mt-12 text-center">
            <p class="text-stone mb-4">Specializing in GoHighLevel implementation and automation</p>
            <a href="/services/ai-implementation/gohighlevel/" class="text-accent font-medium hover:underline">
              Learn about our GoHighLevel services →
            </a>
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="py-20 bg-white">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            Frequently Asked <em>Questions</em>
          </h2>
          <div class="space-y-6">
            {faqs.map((faq) => (
              <div class="bg-cream rounded-2xl p-6">
                <h3 class="font-display text-lg text-charcoal mb-3">{faq.question}</h3>
                <p class="text-stone leading-relaxed">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Related Solutions Section -->
      <section class="py-20 bg-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            Related <em>Solutions</em>
          </h2>

          <div class="grid md:grid-cols-3 gap-8">
            <a href="/solutions/workflow-automation/" class="bg-white rounded-2xl p-8 card-hover group">
              <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">Workflow Automation</h3>
              <p class="text-stone leading-relaxed mb-4">Connect your CRM to other tools and eliminate manual data transfer.</p>
              <span class="text-accent font-medium">Learn more →</span>
            </a>
            <a href="/solutions/appointment-automation/" class="bg-white rounded-2xl p-8 card-hover group">
              <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">Appointment Automation</h3>
              <p class="text-stone leading-relaxed mb-4">AI-powered scheduling that integrates with your CRM.</p>
              <span class="text-accent font-medium">Learn more →</span>
            </a>
            <a href="/services/ai-implementation/" class="bg-white rounded-2xl p-8 card-hover group">
              <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">AI Implementation</h3>
              <p class="text-stone leading-relaxed mb-4">Full-service AI implementation beyond CRM automation.</p>
              <span class="text-accent font-medium">Learn more →</span>
            </a>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-20 bg-charcoal text-cream">
        <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
          <h2 class="heading-display text-3xl md:text-4xl mb-6">
            Ready to <em class="text-accent">Automate Your CRM</em>?
          </h2>
          <p class="text-stone-light text-lg mb-8">
            Let's discuss your current CRM setup and identify automation opportunities. Free 30-minute consultation.
          </p>
          <a href="/#contact" class="btn-primary inline-flex bg-accent hover:bg-accent-dark">
            <span>Book Free Consultation</span>
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
