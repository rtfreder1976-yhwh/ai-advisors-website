---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = "Workflow Automation Services | AI Business Process Automation | Singing River AI";
const description = "Automate repetitive business workflows with AI. Connect your tools, eliminate manual data entry, and streamline operations. Free consultation for small businesses.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.png', Astro.site);

const workflows = [
  {
    title: "Lead-to-Customer Pipeline",
    before: "Manual data entry between forms, CRM, email, and invoicing",
    after: "New lead automatically added to CRM, triggers welcome sequence, creates project folder, and sets up invoicing"
  },
  {
    title: "Invoice Processing",
    before: "Open email, download invoice, enter data, file document, send confirmation",
    after: "AI extracts data, enters into accounting system, files automatically, sends confirmation"
  },
  {
    title: "Customer Onboarding",
    before: "Send welcome email, create accounts, schedule kickoff, assign team member",
    after: "Triggered automatically when deal closes—all steps happen without manual intervention"
  },
  {
    title: "Report Generation",
    before: "Export data from multiple sources, combine in spreadsheet, format report, send to stakeholders",
    after: "Automated weekly reports compiled and delivered to the right people"
  }
];

const features = [
  {
    title: "Multi-Tool Integration",
    description: "Connect the tools you already use—CRMs, email, calendars, accounting software, project management, and more."
  },
  {
    title: "Intelligent Routing",
    description: "AI analyzes incoming data and routes it to the right person or system based on content and context."
  },
  {
    title: "Error Reduction",
    description: "Eliminate manual data entry errors. Automated workflows are consistent and accurate every time."
  },
  {
    title: "Conditional Logic",
    description: "Build smart workflows that adapt based on conditions—different paths for different scenarios."
  },
  {
    title: "Real-Time Triggers",
    description: "Workflows fire instantly when events occur—no delays, no batching, no waiting."
  },
  {
    title: "Audit Trail",
    description: "Full visibility into what automated and when. Track every action for compliance and troubleshooting."
  }
];

const tools = [
  "Zapier", "Make (Integromat)", "n8n", "Power Automate",
  "Google Workspace", "Microsoft 365", "Slack", "Notion",
  "QuickBooks", "Xero", "Calendly", "Stripe"
];

const faqs = [
  {
    question: "What types of workflows can be automated?",
    answer: "Almost any repetitive process: lead follow-up, invoice processing, customer onboarding, report generation, data synchronization, appointment scheduling, email responses, document creation, and more. If you do it the same way each time, it can probably be automated."
  },
  {
    question: "Will automation break my existing systems?",
    answer: "No. We integrate with your existing tools rather than replacing them. Automations run alongside your current processes, and we thoroughly test before going live. We also build in error handling and monitoring."
  },
  {
    question: "How much time will I actually save?",
    answer: "It depends on current manual workload, but most clients save 5-15 hours per week. We identify your highest-impact opportunities during the consultation and provide realistic estimates for your specific situation."
  },
  {
    question: "What if something goes wrong with an automation?",
    answer: "We build in monitoring and alerts so you know immediately if something fails. Automations can retry, fall back to alternative paths, or notify you for manual intervention. We also provide ongoing support to address any issues."
  },
  {
    question: "How long does implementation take?",
    answer: "Simple workflows can be live in a few days. More complex multi-step automations typically take 1-3 weeks. We prioritize quick wins to deliver value fast while building toward more comprehensive automation."
  }
];

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://singingriverai.com/solutions/workflow-automation/#service",
      "name": "Workflow Automation Services",
      "description": description,
      "provider": { "@id": "https://singingriverai.com/#organization" },
      "serviceType": "Workflow Automation",
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      }
    },
    {
      "@type": "WebPage",
      "@id": "https://singingriverai.com/solutions/workflow-automation/#webpage",
      "url": "https://singingriverai.com/solutions/workflow-automation/",
      "name": "Workflow Automation Services | Singing River AI",
      "description": description,
      "isPartOf": { "@id": "https://singingriverai.com/#website" },
      "about": { "@id": "https://singingriverai.com/solutions/workflow-automation/#service" }
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://singingriverai.com/solutions/workflow-automation/#breadcrumb",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://singingriverai.com/" },
        { "@type": "ListItem", "position": 2, "name": "Solutions", "item": "https://singingriverai.com/ai-for-small-business/" },
        { "@type": "ListItem", "position": 3, "name": "Workflow Automation" }
      ]
    },
    {
      "@type": "FAQPage",
      "@id": "https://singingriverai.com/solutions/workflow-automation/#faq",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
      }))
    }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Workflow Automation Services - Singing River AI" />
    <meta property="og:site_name" content="Singing River AI" />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <meta name="robots" content="index, follow" />
    <meta name="author" content="Singing River AI" />
    <meta name="keywords" content="workflow automation, business process automation, AI automation, Zapier automation, Make automation, business efficiency" />

    <title>{title}</title>

    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body class="grain-overlay">
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-20 right-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
          <div class="absolute bottom-20 left-10 w-64 h-64 bg-stone/5 rounded-full blur-2xl"></div>
        </div>

        <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
          <nav class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-stone">
              <li><a href="/" class="hover:text-accent transition-colors">Home</a></li>
              <li><span class="mx-2">/</span></li>
              <li><a href="/ai-for-small-business/" class="hover:text-accent transition-colors">Solutions</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-charcoal font-medium">Workflow Automation</li>
            </ol>
          </nav>

          <div class="max-w-3xl">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-px bg-accent"></div>
              <span class="text-sm font-medium text-stone uppercase tracking-widest">AI Solution</span>
            </div>

            <h1 class="heading-display text-4xl md:text-5xl lg:text-6xl mb-6">
              <em>Workflow Automation</em> for Small Business
            </h1>

            <p class="text-lg text-stone leading-relaxed mb-8">
              Stop copying data between systems. Stop doing the same task the same way every day. AI-powered workflow automation connects your tools and handles repetitive processes—so you can focus on work that actually requires your expertise.
            </p>

            <a href="/#contact" class="btn-primary inline-flex">
              <span>Get Started</span>
            </a>
          </div>
        </div>
      </section>

      <!-- Stats Section -->
      <section class="py-16 bg-charcoal text-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">10+</div>
              <p class="text-stone-light">Hours saved weekly</p>
            </div>
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">90%</div>
              <p class="text-stone-light">Reduction in data entry errors</p>
            </div>
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">500+</div>
              <p class="text-stone-light">Apps can be connected</p>
            </div>
            <div>
              <div class="font-display text-4xl md:text-5xl text-accent mb-2">Days</div>
              <p class="text-stone-light">Not months to implement</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Before/After Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="text-center max-w-2xl mx-auto mb-12">
            <h2 class="heading-display text-3xl md:text-4xl mb-4">
              Before & After <em>Automation</em>
            </h2>
            <p class="text-stone text-lg">
              See how common business workflows transform with intelligent automation.
            </p>
          </div>

          <div class="space-y-8">
            {workflows.map((workflow) => (
              <div class="bg-cream rounded-2xl p-8">
                <h3 class="font-display text-xl mb-6 text-charcoal">{workflow.title}</h3>
                <div class="grid md:grid-cols-2 gap-8">
                  <div class="bg-white rounded-xl p-6">
                    <div class="flex items-center gap-2 mb-3">
                      <span class="w-3 h-3 bg-red-400 rounded-full"></span>
                      <span class="font-medium text-stone uppercase text-sm tracking-wider">Before</span>
                    </div>
                    <p class="text-stone leading-relaxed">{workflow.before}</p>
                  </div>
                  <div class="bg-white rounded-xl p-6 border-2 border-accent/20">
                    <div class="flex items-center gap-2 mb-3">
                      <span class="w-3 h-3 bg-accent rounded-full"></span>
                      <span class="font-medium text-accent uppercase text-sm tracking-wider">After</span>
                    </div>
                    <p class="text-stone leading-relaxed">{workflow.after}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="py-20 bg-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            Automation <em>Capabilities</em>
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {features.map((feature, index) => (
              <div class="bg-white rounded-2xl p-8 card-hover">
                <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-6">
                  <span class="font-display text-xl">{String(index + 1).padStart(2, '0')}</span>
                </div>
                <h3 class="font-display text-xl mb-3 text-charcoal">{feature.title}</h3>
                <p class="text-stone leading-relaxed">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Tools Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-8 text-center">
            Tools We <em>Connect</em>
          </h2>
          <p class="text-stone text-lg text-center max-w-2xl mx-auto mb-12">
            We work with hundreds of applications. These are just a few of the most common integrations.
          </p>

          <div class="flex flex-wrap justify-center gap-4">
            {tools.map((tool) => (
              <span class="bg-cream px-6 py-3 rounded-full text-charcoal font-medium">{tool}</span>
            ))}
          </div>

          <p class="text-stone text-center mt-8">
            Don't see your tool? <a href="/#contact" class="text-accent hover:underline">Ask us about custom integrations</a>
          </p>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="py-20 bg-cream">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            Frequently Asked <em>Questions</em>
          </h2>
          <div class="space-y-6">
            {faqs.map((faq) => (
              <div class="bg-white rounded-2xl p-6">
                <h3 class="font-display text-lg text-charcoal mb-3">{faq.question}</h3>
                <p class="text-stone leading-relaxed">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Related Solutions Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            Related <em>Solutions</em>
          </h2>

          <div class="grid md:grid-cols-3 gap-8">
            <a href="/solutions/crm-automation/" class="bg-cream rounded-2xl p-8 card-hover group">
              <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">CRM Automation</h3>
              <p class="text-stone leading-relaxed mb-4">Automated lead follow-up and customer management.</p>
              <span class="text-accent font-medium">Learn more →</span>
            </a>
            <a href="/solutions/appointment-automation/" class="bg-cream rounded-2xl p-8 card-hover group">
              <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">Appointment Automation</h3>
              <p class="text-stone leading-relaxed mb-4">AI-powered scheduling and booking workflows.</p>
              <span class="text-accent font-medium">Learn more →</span>
            </a>
            <a href="/services/ai-implementation/" class="bg-cream rounded-2xl p-8 card-hover group">
              <h3 class="font-display text-xl mb-3 text-charcoal group-hover:text-accent transition-colors">AI Implementation</h3>
              <p class="text-stone leading-relaxed mb-4">Full-service AI implementation for your business.</p>
              <span class="text-accent font-medium">Learn more →</span>
            </a>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-20 bg-charcoal text-cream">
        <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
          <h2 class="heading-display text-3xl md:text-4xl mb-6">
            Ready to <em class="text-accent">Automate Your Workflows</em>?
          </h2>
          <p class="text-stone-light text-lg mb-8">
            Let's identify your biggest time-wasters and build automations that give you hours back every week.
          </p>
          <a href="/#contact" class="btn-primary inline-flex bg-accent hover:bg-accent-dark">
            <span>Book Free Consultation</span>
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
