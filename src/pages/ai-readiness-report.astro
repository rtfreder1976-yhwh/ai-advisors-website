const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": "https://singingriverai.com/ai-readiness-report/#webpage",
      "url": "https://singingriverai.com/ai-readiness-report/",
      "name": "Free AI Marketing Assessment & Business Analysis Report | Singing River AI",
      "description": "Get your free AI marketing assessment report with personalized recommendations. Our business marketing analysis identifies automation opportunities and provides a custom implementation roadmap.",
