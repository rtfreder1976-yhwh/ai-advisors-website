      "about": { "@id": "https://singingriverai.com/#organization" },
      "keywords": "free marketing report, business marketing analysis, AI marketing assessment, marketing automation, AI business analysis"
    },
    {
      "@type": "Service",
      "@id": "https://singingriverai.com/ai-readiness-report/#service",
      "name": "Free AI Marketing Assessment Report",
      "alternateName": ["Free Marketing Report", "Business Marketing Analysis", "AI Marketing Assessment"],
      "description": "Free personalized AI marketing assessment that analyzes your business operations, identifies marketing automation opportunities, and provides a custom implementation roadmap for growth.",
