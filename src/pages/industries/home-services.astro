---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = "Home Service Automation | Tennessee Valley | Singing River AI";
const description = "Stop losing leads while on the job. I help HVAC, plumbing, and electrical companies automate lead response and booking. 83% conversion rate proven system.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.png', Astro.site);
const bookingLink = "https://api.singingriverai.com/widget/bookings/free-consultation-home-services";

const results = [
  { stat: "83%", label: "Booking Conversion", sublabel: "Industry avg: 15%" },
  { stat: "30%", label: "Year-Over-Year Growth", sublabel: "4.3x industry standard" },
  { stat: "4.9/5", label: "Customer Rating", sublabel: "200+ Google Reviews" },
  { stat: "A-", label: "BBB Rating", sublabel: "In under 6 months" }
];

const experience = [
  {
    title: "Chief Operating Officer",
    company: "CareServ (Healthcare Tech)",
    achievement: "Scaled from $0 to $2.6M ARR in 24 months with 400% YoY growth"
  },
  {
    title: "Chief Executive Officer",
    company: "HyMark Solutions",
    achievement: "Turned underperforming company profitable in 12 months, added $2.6M revenue"
  },
  {
    title: "SVP of Operations",
    company: "Prove Partners",
    achievement: "Led 7 departments through 300% growth, managed $5M+ budget"
  },
  {
    title: "Senior Account Manager",
    company: "PointClickCare",
    achievement: "Managed $13M+ portfolio, 98% client retention, 25% average account growth"
  }
];

const packageItems = [
  {
    title: "24/7 Automated Lead Response",
    description: "Instant text & email reply to every inquiry—even at 2 AM on Sunday. Be the first contractor to respond, every time."
  },
  {
    title: "Smart Booking System",
    description: "Customers schedule themselves based on your real availability. No more phone tag or double-bookings."
  },
  {
    title: "Follow-Up Sequences",
    description: "Automatic reminders and check-ins so estimates don't go cold. 40% of jobs close with proper follow-up."
  },
  {
    title: "AI-Powered Lead Qualification",
    description: "AI asks the right questions, qualifies leads, and routes hot prospects to you immediately."
  },
  {
    title: "Review Generation Automation",
    description: "Post-job follow-up that turns happy customers into 5-star reviews on Google."
  },
  {
    title: "GoHighLevel CRM Setup",
    description: "See all your leads, jobs, and pipeline in one place. Know exactly where every opportunity stands."
  }
];

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://singingriverai.com/industries/home-services/#service",
      "name": "AI Automation for Home Service Businesses",
      "description": "AI-powered lead response, follow-up automation, and booking systems for contractors, HVAC, plumbers, and electricians.",
      "provider": { "@id": "https://singingriverai.com/#organization" },
      "areaServed": { "@type": "AdministrativeArea", "name": "North Alabama" }
    },
    {
      "@type": "Person",
      "@id": "https://singingriverai.com/#founder",
      "name": "Todd Frederickson",
      "jobTitle": "Founder & CEO",
      "description": "Strategic operations executive with 11+ years scaling organizations to $13M+ revenue. Founder of The Valley Clean Team with 83% booking conversion rate.",
      "knowsAbout": ["AI Automation", "CRM Implementation", "Operations Management", "Digital Transformation"]
    }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body class="grain-overlay">
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-20 right-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
          <div class="absolute bottom-20 left-10 w-64 h-64 bg-stone/5 rounded-full blur-2xl"></div>
        </div>

        <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
          <div class="max-w-3xl mx-auto text-center">
            <div class="flex items-center justify-center gap-3 mb-6">
              <div class="w-12 h-px bg-accent"></div>
              <span class="text-sm font-medium text-stone uppercase tracking-widest">Home Services AI</span>
              <div class="w-12 h-px bg-accent"></div>
            </div>

            <h1 class="heading-display text-4xl md:text-5xl lg:text-6xl mb-6">
              Stop Losing Leads While You're <em>On The Job</em>
            </h1>

            <p class="text-lg md:text-xl text-stone leading-relaxed mb-8 max-w-2xl mx-auto">
              I built an 83% booking conversion rate for my own local business using AI automation. Now I'll set up the same system for your contracting company.
            </p>

            <a href={bookingLink} target="_blank" rel="noopener noreferrer" class="btn-primary inline-flex mb-6">
              <span>Book Free 15-Min Consultation</span>
            </a>

            <p class="text-sm text-stone">
              No pitch. Just an honest conversation about whether automation makes sense for your business.
            </p>
          </div>
        </div>
      </section>

      <!-- Results Banner -->
      <section class="py-12 bg-charcoal text-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <p class="text-center text-stone-light text-sm uppercase tracking-widest mb-8">My Results at The Valley Clean Team</p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            {results.map((item) => (
              <div>
                <div class="font-display text-4xl md:text-5xl text-accent mb-2">{item.stat}</div>
                <div class="text-sm text-cream mb-1">{item.label}</div>
                <div class="text-xs text-stone-light">{item.sublabel}</div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- The Problem Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-4 text-center">
            You're Great At Your Job. But You're <em>Losing Business</em> Anyway.
          </h2>
          <p class="text-lg text-stone text-center max-w-2xl mx-auto mb-12">
            Sound familiar?
          </p>

          <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
            <div class="bg-cream rounded-2xl p-8">
              <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h3 class="font-display text-xl mb-3 text-charcoal">Missed Calls = Lost Revenue</h3>
              <p class="text-stone text-sm leading-relaxed">
                You're on a job site. A lead calls. By the time you call back, they've already hired your competitor. 78% of jobs go to the first responder.
              </p>
            </div>

            <div class="bg-cream rounded-2xl p-8">
              <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="font-display text-xl mb-3 text-charcoal">Estimates Go Cold</h3>
              <p class="text-stone text-sm leading-relaxed">
                You gave the estimate. They said they'd think about it. Without follow-up, that job goes to someone else. 40% of estimates close with proper follow-up.
              </p>
            </div>

            <div class="bg-cream rounded-2xl p-8">
              <div class="w-12 h-12 bg-charcoal rounded-xl flex items-center justify-center text-cream mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <h3 class="font-display text-xl mb-3 text-charcoal">Inconsistent Results</h3>
              <p class="text-stone text-sm leading-relaxed">
                Some weeks you book 8 out of 10 leads. Other weeks it's 2 out of 10. You know you could grow faster if you just had more time.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- My Story Section -->
      <section class="py-20 bg-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-px bg-accent"></div>
                <span class="text-sm font-medium text-stone uppercase tracking-widest">My Story</span>
              </div>

              <h2 class="heading-display text-3xl md:text-4xl mb-6">
                From $13M Executive to <em>Local Business Owner</em>
              </h2>

              <div class="space-y-4 text-stone leading-relaxed">
                <p>
                  Hi, I'm Todd Frederickson.
                </p>
                <p>
                  For 11+ years, I was the COO and CEO scaling companies to $13M+ in revenue. I implemented enterprise-level automation systems that increased operational efficiency by 400%+. I managed teams of 45+ people across multiple locations.
                </p>
                <p>
                  <strong class="text-charcoal">Then I started The Valley Clean Team right here in Tuscumbia.</strong>
                </p>
                <p>
                  I took everything I learned from enterprise tech and applied it to my local cleaning business. Automated lead response. Smart booking. Follow-up sequences. AI-powered customer communication.
                </p>
                <p>
                  The result? <strong class="text-charcoal">83% booking conversion rate</strong>—5.5x higher than the industry average of 15%. A BBB A- rating in under 6 months. 4.9/5 stars from 200+ customers.
                </p>
                <p class="text-charcoal font-medium">
                  Now I help other home service businesses get the same results.
                </p>
              </div>
            </div>

            <div class="bg-white rounded-2xl p-8 shadow-xl shadow-charcoal/5">
              <h3 class="font-display text-xl mb-6 text-charcoal text-center">11+ Years of Executive Experience</h3>
              <div class="space-y-6">
                {experience.map((exp) => (
                  <div class="border-l-2 border-accent pl-4">
                    <div class="font-display text-lg text-charcoal">{exp.title}</div>
                    <div class="text-sm text-stone mb-1">{exp.company}</div>
                    <div class="text-sm text-accent-dark">{exp.achievement}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Case Study Section -->
      <section class="py-20 bg-charcoal text-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="text-center mb-12">
            <span class="text-sm font-medium text-accent uppercase tracking-widest">Case Study</span>
            <h2 class="heading-display text-3xl md:text-4xl mt-4 mb-4">
              The Valley Clean Team <em class="text-accent">Results</em>
            </h2>
            <p class="text-stone-light max-w-2xl mx-auto">
              Real results from my own local business—not theory, not consulting talk. This is what I built and what I can build for you.
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <div class="bg-charcoal-light rounded-2xl p-8">
              <h3 class="font-display text-xl text-accent mb-4">The Problem</h3>
              <ul class="space-y-3 text-stone-light">
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>Missed calls while on cleaning jobs</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>Hours spent on scheduling and follow-ups</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>Inconsistent booking rates week to week</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>No time to focus on growth</span>
                </li>
              </ul>
            </div>

            <div class="bg-charcoal-light rounded-2xl p-8">
              <h3 class="font-display text-xl text-accent mb-4">What I Implemented</h3>
              <ul class="space-y-3 text-stone-light">
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>GoHighLevel CRM with automation workflows</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>24/7 automated lead response (text + email)</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>AI-powered FAQ and qualification</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent mt-1">•</span>
                  <span>Automated review request sequences</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-12 text-center">
            <p class="text-lg text-cream mb-2">The Bottom Line:</p>
            <p class="font-display text-2xl md:text-3xl text-accent">
              83% of leads become paying customers.
            </p>
            <p class="text-stone-light mt-2">Industry average is 15%. That's 5.5x better conversion.</p>
          </div>
        </div>
      </section>

      <!-- What You Get Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="heading-display text-3xl md:text-4xl mb-4">
              The Home Service <em>Automation Package</em>
            </h2>
            <p class="text-lg text-stone max-w-2xl mx-auto">
              Everything you need to stop losing leads and start booking more jobs—automatically.
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
            {packageItems.map((item) => (
              <div class="bg-cream rounded-2xl p-6">
                <div class="flex items-start gap-3 mb-3">
                  <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <h3 class="font-display text-lg text-charcoal">{item.title}</h3>
                </div>
                <p class="text-stone text-sm leading-relaxed pl-9">{item.description}</p>
              </div>
            ))}
          </div>

          <div class="mt-12 max-w-2xl mx-auto">
            <div class="bg-cream-dark rounded-2xl p-8 text-center">
              <p class="font-display text-xl text-charcoal mb-2">
                ⚡ 2-Week Implementation + 2 Weeks Support
              </p>
              <p class="text-stone mb-4">
                You'll be up and running fast, with hands-on support to make sure everything works.
              </p>
              <p class="text-lg text-charcoal">
                <strong>Investment:</strong> $4,500 - $6,000
                <span class="text-stone text-sm block mt-1">(Payment plans available)</span>
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Who This Is For Section -->
      <section class="py-20 bg-cream">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <h2 class="heading-display text-3xl md:text-4xl mb-12 text-center">
            Built For <em>Home Service Pros</em>
          </h2>

          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 max-w-4xl mx-auto">
            {["HVAC Contractors", "Plumbers", "Electricians", "Roofers", "General Contractors", "Landscapers"].map((trade) => (
              <div class="bg-white rounded-xl p-4 text-center">
                <span class="text-charcoal font-medium text-sm">{trade}</span>
              </div>
            ))}
          </div>

          <p class="text-center text-stone mt-8 max-w-2xl mx-auto">
            If you're a home service professional in Huntsville, the Shoals, Decatur, or anywhere in North Alabama—and you're tired of losing leads while you're on the job—this is for you.
          </p>
        </div>
      </section>

      <!-- Final CTA Section -->
      <section class="py-20 bg-charcoal text-cream">
        <div class="max-w-3xl mx-auto px-6 lg:px-8 text-center">
          <h2 class="heading-display text-3xl md:text-4xl mb-6">
            Ready to Stop <em class="text-accent">Losing Leads?</em>
          </h2>

          <p class="text-lg text-stone-light mb-4">
            Book a free 15-minute consultation. No pitch, no pressure—just an honest conversation about whether automation makes sense for your business.
          </p>

          <p class="text-stone-light mb-8">
            I'll ask about your current lead flow, show you what's possible, and give you a straight answer on whether this would help.
          </p>

          <a href={bookingLink} target="_blank" rel="noopener noreferrer" class="btn-primary inline-flex bg-accent hover:bg-accent-dark text-charcoal mb-8">
            <span>Book Your Free Consultation</span>
          </a>

          <div class="text-stone-light text-sm space-y-1">
            <p>Prefer to email? <a href="mailto:info@singingriverai.com" class="text-accent hover:underline">info@singingriverai.com</a></p>
            <p>Prefer to call? <a href="tel:+12567403195" class="text-accent hover:underline">(256) 740-3195</a></p>
          </div>

          <p class="text-stone italic mt-8 text-sm">
            Only taking 3 new clients this quarter to ensure exceptional results.
          </p>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
