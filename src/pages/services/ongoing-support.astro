---
import ServiceLayout from '../../layouts/ServiceLayout.astro';

const services = [
  {
    name: "AI System Optimization",
    description: "Continuous monitoring and improvement of your AI systems to ensure peak performance and evolving business alignment."
  },
  {
    name: "Maintenance & Updates",
    description: "Regular updates, patches, and maintenance to keep your AI solutions running smoothly and securely."
  },
  {
    name: "Performance Monitoring",
    description: "Proactive monitoring dashboards and alerts to track AI system health, accuracy, and business impact."
  },
  {
    name: "Model Retraining",
    description: "Periodic retraining of AI models with new data to maintain accuracy and adapt to changing business conditions."
  },
  {
    name: "Technical Support",
    description: "Responsive support for troubleshooting, questions, and technical assistance when you need it."
  },
  {
    name: "Quarterly Strategy Reviews",
    description: "Regular check-ins to assess AI performance, identify new opportunities, and plan future enhancements."
  }
];

const icon = `<svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
</svg>`;

const faqs = [
  {
    question: "Why do AI systems need ongoing support?",
    answer: "AI systems require maintenance as your business evolves, tools update, and new opportunities emerge. Ongoing support ensures your automations continue working smoothly and can be optimized based on real-world performance data."
  },
  {
    question: "What's included in AI optimization?",
    answer: "AI optimization includes monitoring system performance, updating prompts and workflows based on results, expanding automations to new use cases, and regular strategy reviews to identify new opportunities."
  }
];

const relatedServices = [
  {
    name: "AI Strategy & Consulting",
    href: "/services/ai-consulting/",
    description: "Identify new AI opportunities during quarterly strategy reviews."
  },
  {
    name: "AI Implementation",
    href: "/services/ai-implementation/",
    description: "Expand your AI capabilities with new custom solutions."
  },
  {
    name: "AI Education & Training",
    href: "/services/ai-training/",
    description: "Keep your team's AI skills current with ongoing training."
  }
];
---

<ServiceLayout
  title="Ongoing Support & Optimization | Singing River AI"
  description="Continuous AI support and optimization services. We ensure your AI systems perform optimally and evolve with your business needs."
  serviceName="Ongoing Support & Optimization"
  serviceDescription="Continuous monitoring, improvement, and support to ensure your AI systems perform optimally and evolve with your business. We're your long-term partner in AI success."
  serviceCategory="Support Services"
  services={services}
  icon={icon}
  faqs={faqs}
  relatedServices={relatedServices}
/>
