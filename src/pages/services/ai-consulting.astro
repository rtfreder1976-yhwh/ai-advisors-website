const services = [
  {
    name: "AI Readiness Assessment",
    description: "Comprehensive evaluation of your business processes, data infrastructure, and team capabilities to identify AI opportunities."
  },
  {
    name: "Use Case Identification",
    description: "Strategic analysis to find high-impact AI opportunities with the best ROI potential for your specific business context."
  },
  {
    name: "AI Implementation Roadmap",
    description: "Detailed planning and prioritization for your AI transformation journey, including timelines, resources, and milestones."
  },
  {
    name: "Technology Stack Advisory",
    description: "Expert guidance on selecting the right AI tools, platforms, and vendors for your specific needs and budget."
  },
  {
    name: "ROI Analysis & Business Case",
