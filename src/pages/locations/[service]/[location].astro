---
import Layout from "../../../layouts/Layout.astro";
import servicesData from "../../../data/services.json";
import locationsData from "../../../data/locations.json";

export async function getStaticPaths() {
    const paths = [];

    // Cartesian product: Every service x Every location
    servicesData.forEach((service) => {
        locationsData.forEach((location) => {
            paths.push({
                params: {
                    service: service.slug,
                    location: location.slug,
                },
                props: {
                    service,
                    location,
                },
            });
        });
    });

    return paths;
}

const { service, location } = Astro.props;

// Dynamic Metadata
const pageTitle = `Best ${service.name} in ${location.name}, TX | Top Rated Cleaners`;
const pageDescription = `Looking for 5-star ${service.name} in ${location.name}? We serve ${location.neighborhoods.join(", ")} and surrounding areas. Book your quote in 60 seconds!`;
---

<Layout title={pageTitle} description={pageDescription}>
    <main
        class="min-h-screen bg-neutral-900 text-white font-sans selection:bg-rose-500/30"
    >
        {/* HERO SECTION */}
        <section class="relative pt-32 pb-20 px-4 overflow-hidden">
            <div
                class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-rose-500/20 via-neutral-900/0 to-transparent"
            >
            </div>

            <div class="max-w-4xl mx-auto text-center relative z-10">
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-rose-500/10 border border-rose-500/20 text-rose-400 text-sm font-medium mb-6"
                >
                    <span class="w-2 h-2 rounded-full bg-rose-500 animate-pulse"
                    ></span>
                    Now accepting new clients in {location.name}
                </div>

                <h1
                    class="text-5xl md:text-7xl font-bold tracking-tight mb-8 leading-tight"
                >
                    Premium <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-rose-400 to-orange-400"
                        >{service.name}</span
                    >
                    <br />
                    in <span class="text-white">{location.name}</span>
                </h1>

                <p
                    class="text-xl text-neutral-400 mb-10 max-w-2xl mx-auto leading-relaxed"
                >
                    {service.description} We are the highest-rated cleaning team serving
                    <span class="text-white font-medium">
                        {location.zipCodes.join(", ")}</span
                    > and
                    <span class="text-white font-medium">
                        {location.neighborhoods.join(", ")}</span
                    >.
                </p>

                {/* CTA BUTTONS */}
                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center items-center"
                >
                    <a
                        href="#book"
                        class="px-8 py-4 bg-rose-600 hover:bg-rose-500 text-white rounded-xl font-semibold transition-all shadow-lg shadow-rose-900/20 hover:scale-105"
                    >
                        Get an Instant Quote
                    </a>
                    <a
                        href="tel:+15555555555"
                        class="px-8 py-4 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl font-medium border border-neutral-700 transition-all"
                    >
                        Call (555) 555-5555
                    </a>
                </div>
            </div>
        </section>

        {/* GHL BOOKING EMBED SECTION */}
        <section id="book" class="py-20 px-4 bg-neutral-900/50">
            <div
                class="max-w-3xl mx-auto bg-neutral-800/50 rounded-2xl p-1 border border-neutral-700/50 shadow-2xl"
            >
                <div class="bg-neutral-900 rounded-xl p-8 md:p-12">
                    <div class="text-center mb-10">
                        <h2 class="text-3xl font-bold mb-4">
                            Book Your Spot in {location.name}
                        </h2>
                        <p class="text-neutral-400">
                            Enter your details below to get an exact price.
                        </p>
                    </div>

                    {/* PLACEHOLDER FOR GHL EMBED */}
                    <div
                        class="w-full h-[600px] bg-neutral-800 rounded-lg flex items-center justify-center border-2 border-dashed border-neutral-700 text-neutral-500"
                    >
                        <!-- Paste your GHL Form Embed Code Here -->
                        [GHL Form Embed Placeholder]
                    </div>
                </div>
            </div>
        </section>

        {/* SERVICE FEATURES */}
        <section class="py-20 px-4">
            <div
                class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8"
            >
                {
                    service.features.map((feature) => (
                        <div class="p-6 rounded-2xl bg-neutral-800/30 border border-neutral-800 hover:border-rose-500/30 transition-colors group">
                            <div class="w-12 h-12 rounded-lg bg-rose-500/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-6 h-6 text-rose-500"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"
                                    />
                                </svg>
                            </div>
                            <h3 class="text-xl font-semibold mb-2">
                                {feature}
                            </h3>
                            <p class="text-neutral-400">
                                We don't cut corners, we clean them. Experience
                                the best standard in {location.name}.
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>

        {/* SEO FOOTER (Internal Linking) */}
        <section class="py-20 px-4 border-t border-neutral-800/50">
            <div class="max-w-6xl mx-auto">
                <h3
                    class="text-sm font-semibold text-neutral-500 uppercase tracking-wider mb-6"
                >
                    Serving All Neighborhoods in {location.name}
                </h3>
                <div class="flex flex-wrap gap-3">
                    {
                        location.neighborhoods.map((hood) => (
                            <span class="px-3 py-1 rounded-md bg-neutral-800 text-neutral-400 text-sm">
                                {hood}
                            </span>
                        ))
                    }
                </div>

                <div class="mt-8 pt-8 border-t border-neutral-800/50">
                    <h3
                        class="text-sm font-semibold text-neutral-500 uppercase tracking-wider mb-6"
                    >
                        Our Services in {location.name}
                    </h3>
                    <div class="flex flex-wrap gap-4">
                        {
                            servicesData.map((s) => (
                                <a
                                    href={`/locations/${s.slug}/${location.slug}`}
                                    class="text-neutral-400 hover:text-rose-400 text-sm transition-colors"
                                >
                                    {s.name} in {location.name}
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
